# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Apex27 Main API (Standard API - primary data source)
# Provides full data access, webhook support, and structured flag objects
# Supports real-time webhooks + periodic full sync
APEX27_API_KEY=your-main-api-key

# Apex27 Portal API (optional - for GDPR-compliant public queries)
# Limited to marketed properties only, no webhooks
# Use if you need public-facing property search separate from Main API
APEX27_PORTAL_URL=https://portals-xxxxx.apex27.co.uk
APEX27_PORTAL_API_KEY=your-portal-api-key

# Cron Security (protect cron endpoints)
CRON_SECRET=generate-random-32-char-secret

# OS Data Hub API (UK Property Data)
OS_DATA_HUB_API_KEY=your-api-key
OS_DATA_HUB_API_SECRET=your-api-secret

# Mapbox (for territory mapping)
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Vercel (for build system)
VERCEL_API_TOKEN=your-vercel-token
VERCEL_TEAM_ID=your-team-id

# Email (Resend)
RESEND_API_KEY=your-resend-key
RESEND_FROM_EMAIL=noreply@nestassociates.com

# Sentry (optional for local dev)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-token

# Environment
NODE_ENV=development
