---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getSiteData, getContentBySlug, placeholderData } from '../../lib/data';

// Server-side rendering - fetch data on each request
const { slug } = Astro.params;
const siteData = await getSiteData() || placeholderData;
const area = getContentBySlug(siteData, slug as string);

// 404 if area guide not found
if (!area) {
  return Astro.redirect('/areas');
}
---

<BaseLayout title={area.title} description={area.excerpt || undefined} siteData={siteData} currentPath="/areas">
  <div class="min-h-screen bg-gray-50">
    <!-- Article -->
    <article class="py-16">
      <div class="container mx-auto px-4 max-w-4xl">
        <!-- Back link -->
        <a href="/areas" class="inline-flex items-center text-blue-600 hover:text-blue-700 mb-8">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Area Guides
        </a>

        <!-- Featured Image -->
        {area.featuredImageUrl && (
          <img
            src={area.featuredImageUrl}
            alt={area.title}
            class="w-full h-96 object-cover rounded-lg mb-8"
          />
        )}

        <!-- Title -->
        <div class="mb-8">
          <h1 class="text-4xl font-bold mb-4">{area.title}</h1>
          {area.excerpt && (
            <p class="text-xl text-gray-600">{area.excerpt}</p>
          )}
        </div>

        <!-- Content -->
        <div class="prose prose-lg max-w-none bg-white rounded-lg shadow-sm p-8 mb-8">
          <Fragment set:html={area.contentBody} />
        </div>

        <!-- CTA -->
        <div class="bg-blue-50 rounded-lg p-8 text-center">
          <h2 class="text-2xl font-bold mb-4">Interested in Properties in {area.title}?</h2>
          <p class="text-gray-700 mb-6">Let {siteData.agent.name} help you find your perfect home in this area</p>
          <div class="flex justify-center gap-4">
            <a href="/properties" class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
              View Properties
            </a>
            <a href="/contact" class="inline-block border-2 border-blue-600 text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-blue-600 hover:text-white transition">
              Contact Me
            </a>
          </div>
        </div>
      </div>
    </article>
  </div>
</BaseLayout>
