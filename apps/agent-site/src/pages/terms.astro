---
/**
 * Terms of Service Page
 * Displays global terms of service content from the dashboard
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import { getSiteData, placeholderData } from '../lib/data';

const siteData = await getSiteData() || placeholderData;
const termsContent = siteData.globalContent?.termsOfService;
---

<BaseLayout title="Terms of Service" siteData={siteData} currentPath="/terms">
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <section class="bg-white border-b py-12">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold mb-4">Terms of Service</h1>
        <p class="text-gray-600 text-lg">
          Terms and conditions for using {siteData.agent.name}'s services
        </p>
      </div>
    </section>

    <!-- Content -->
    <section class="py-16">
      <div class="container mx-auto px-4 max-w-3xl">
        <div class="bg-white rounded-lg shadow-sm p-8">
          {termsContent ? (
            <div class="prose prose-lg max-w-none">
              <Fragment set:html={termsContent} />
            </div>
          ) : (
            <div class="text-center py-12">
              <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <h2 class="text-xl font-semibold mb-3">Terms of Service Coming Soon</h2>
              <p class="text-gray-600 mb-6">
                Our terms of service are being prepared and will be available shortly.
              </p>
              <p class="text-sm text-gray-500">
                For any enquiries about our terms, please contact us directly.
              </p>
            </div>
          )}
        </div>

        <!-- Contact CTA -->
        <div class="mt-8 bg-blue-50 rounded-lg p-6 text-center">
          <p class="text-gray-700 mb-4">Have questions about our terms?</p>
          <a href="/contact" class="inline-block bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-700 transition">
            Contact Us
          </a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
