---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getSiteData, placeholderData } from '../lib/data';

// Load site data
const siteData = await getSiteData() || placeholderData;

// Redirect to home if fees section is not enabled
if (!siteData.sections.fees || !siteData.fees) {
  return Astro.redirect('/');
}
---

<BaseLayout title="Fees & Charges" siteData={siteData} currentPath="/fees">
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <section class="bg-white border-b py-12">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold mb-4">Fees & Charges</h1>
        <p class="text-gray-600 text-lg">
          Transparent pricing for all services from {siteData.agent.name}
        </p>
      </div>
    </section>

    <!-- Fees Content -->
    <section class="py-16">
      <div class="container mx-auto px-4 max-w-3xl">
        <div class="bg-white rounded-lg shadow-sm p-8">
          <div class="prose prose-lg max-w-none">
            <Fragment set:html={siteData.fees} />
          </div>
        </div>

        <!-- Disclaimer -->
        <div class="mt-8 text-sm text-gray-500 text-center">
          <p>All fees are subject to VAT where applicable. Terms and conditions apply.</p>
          <p>Please contact us for a full breakdown of costs specific to your requirements.</p>
        </div>

        <!-- CTA -->
        <div class="mt-12 bg-blue-50 rounded-lg p-8 text-center">
          <h2 class="text-2xl font-bold mb-4">Have Questions About Fees?</h2>
          <p class="text-gray-700 mb-6">Get in touch for a no-obligation quote</p>
          <a href="/contact" class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
            Contact Me
          </a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
