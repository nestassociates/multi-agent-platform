---
import BaseLayout from '../layouts/BaseLayout.astro';

const agentData = {
  name: 'Agent Name',
  phone: '020 7123 4567',
  email: 'agent@example.com',
};
---

<BaseLayout title={`Contact ${agentData.name}`}>
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <section class="bg-white border-b py-8">
      <div class="container mx-auto px-4">
        <nav class="flex gap-6">
          <a href="/" class="text-gray-600 hover:text-blue-600 transition">Home</a>
          <a href="/about" class="text-gray-600 hover:text-blue-600 transition">About</a>
          <a href="/properties" class="text-gray-600 hover:text-blue-600 transition">Properties</a>
          <a href="/contact" class="text-blue-600 font-semibold">Contact</a>
        </nav>
      </div>
    </section>

    <!-- Contact Content -->
    <section class="py-16">
      <div class="container mx-auto px-4 max-w-4xl">
        <h1 class="text-4xl font-bold mb-8">Get in Touch</h1>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Contact Form -->
          <div class="bg-white p-8 rounded-lg shadow-sm">
            <h2 class="text-2xl font-semibold mb-6">Send a Message</h2>
            <form class="space-y-4" method="POST" action="/api/contact">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent"
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent"
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent"
                />
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent"
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition"
              >
                Send Message
              </button>
            </form>
          </div>

          <!-- Contact Details -->
          <div class="space-y-6">
            <div class="bg-white p-8 rounded-lg shadow-sm">
              <h2 class="text-2xl font-semibold mb-4">Contact Details</h2>
              <div class="space-y-4">
                <div>
                  <h3 class="font-medium text-gray-900 mb-1">Phone</h3>
                  <a href={`tel:${agentData.phone}`} class="text-blue-600 hover:underline">
                    {agentData.phone}
                  </a>
                </div>
                <div>
                  <h3 class="font-medium text-gray-900 mb-1">Email</h3>
                  <a href={`mailto:${agentData.email}`} class="text-blue-600 hover:underline">
                    {agentData.email}
                  </a>
                </div>
              </div>
            </div>

            <div class="bg-blue-50 p-8 rounded-lg">
              <h3 class="font-semibold mb-2">Office Hours</h3>
              <p class="text-sm text-gray-700">Monday - Friday: 9am - 6pm</p>
              <p class="text-sm text-gray-700">Saturday: 10am - 4pm</p>
              <p class="text-sm text-gray-700">Sunday: Closed</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
