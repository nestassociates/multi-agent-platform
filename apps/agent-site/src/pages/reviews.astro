---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getSiteData, placeholderData } from '../lib/data';

// Load site data
const siteData = await getSiteData() || placeholderData;

// Redirect to home if reviews section is not enabled
if (!siteData.sections.reviews || !siteData.agent.googlePlaceId) {
  return Astro.redirect('/');
}

// Reviews will be fetched client-side from Google Places API
// For now, show placeholder until client-side component loads
const reviews: any[] = [];
---

<BaseLayout title="Customer Reviews & Testimonials" siteData={siteData} currentPath="/reviews">
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <section class="bg-white border-b py-12">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl font-bold mb-4">Customer Reviews</h1>
        <p class="text-gray-600 text-lg">
          See what clients say about working with {siteData.agent.name}
        </p>
      </div>
    </section>

    <!-- Reviews Section -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <!-- Google Reviews will be loaded client-side -->
        <div id="google-reviews" data-place-id={siteData.agent.googlePlaceId}>
          <div class="bg-white rounded-lg shadow-sm p-12 text-center max-w-2xl mx-auto">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-400 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
            </svg>
            <h2 class="text-2xl font-semibold mb-2">Loading Reviews...</h2>
            <p class="text-gray-600">Fetching the latest reviews from Google</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-blue-50 py-16">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-4">Ready to Work Together?</h2>
        <p class="text-gray-700 mb-8 text-lg">
          Join my satisfied clients and experience professional real estate service
        </p>
        <div class="flex justify-center gap-4">
          <a href="/properties" class="bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
            View Properties
          </a>
          <a href="/contact" class="border-2 border-blue-600 text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-blue-600 hover:text-white transition">
            Contact Me
          </a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<script>
  // Client-side Google Reviews fetching
  // This will be implemented when Google Places API is configured
  const reviewsContainer = document.getElementById('google-reviews');
  const placeId = reviewsContainer?.dataset.placeId;

  if (placeId) {
    // TODO: Fetch reviews from Google Places API via public endpoint
    // For now, show a message
    setTimeout(() => {
      if (reviewsContainer) {
        reviewsContainer.innerHTML = `
          <div class="bg-white rounded-lg shadow-sm p-12 text-center max-w-2xl mx-auto">
            <svg class="w-16 h-16 mx-auto mb-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
            </svg>
            <h2 class="text-2xl font-semibold mb-2">Google Reviews</h2>
            <p class="text-gray-600 mb-6">Reviews from Google My Business will be displayed here once the integration is configured.</p>
            <a href="https://search.google.com/local/reviews?placeid=${placeId}" target="_blank" rel="noopener noreferrer" class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
              View on Google
            </a>
          </div>
        `;
      }
    }, 1000);
  }
</script>
