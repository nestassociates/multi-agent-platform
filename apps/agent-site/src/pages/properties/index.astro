---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Properties will be loaded from generated data file in production
const properties: any[] = [];
---

<BaseLayout title="Properties for Sale & Rent">
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <section class="bg-white border-b py-8">
      <div class="container mx-auto px-4">
        <nav class="flex gap-6">
          <a href="/" class="text-gray-600 hover:text-blue-600 transition">Home</a>
          <a href="/about" class="text-gray-600 hover:text-blue-600 transition">About</a>
          <a href="/properties" class="text-blue-600 font-semibold">Properties</a>
          <a href="/contact" class="text-gray-600 hover:text-blue-600 transition">Contact</a>
        </nav>
      </div>
    </section>

    <!-- Properties Content -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold mb-8">Available Properties</h1>

        {properties.length === 0 ? (
          <div class="bg-white p-12 rounded-lg shadow-sm text-center">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <h2 class="text-2xl font-semibold mb-2">No Properties Available</h2>
            <p class="text-gray-600">Check back soon for new listings.</p>
          </div>
        ) : (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {properties.map((property) => (
              <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition">
                <img src={property.image || '/placeholder.jpg'} alt={property.title} class="w-full h-48 object-cover" />
                <div class="p-6">
                  <h3 class="text-xl font-semibold mb-2">{property.title}</h3>
                  <p class="text-2xl font-bold text-blue-600 mb-4">Â£{property.price.toLocaleString()}</p>
                  <div class="flex gap-4 text-sm text-gray-600">
                    <span>{property.bedrooms} bed</span>
                    <span>{property.bathrooms} bath</span>
                  </div>
                </div>
              </div>
            ))}
          </div>
        )}
      </div>
    </section>
  </div>
</BaseLayout>
