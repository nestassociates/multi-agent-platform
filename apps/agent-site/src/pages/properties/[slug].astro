---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Generate static paths from data file
export async function getStaticPaths() {
  // In production, this will read from generated JSON
  // For now, return empty array for build to succeed
  return [];
}

const { slug } = Astro.params;

const property = {
  title: 'Property Title',
  price: 500000,
  listingType: 'For Sale',
  bedrooms: 3,
  bathrooms: 2,
  squareFootage: 1200,
  description: '<p>Property description will appear here when generated from the dashboard.</p>',
  address: 'Property Address',
  images: [],
  features: [],
  floorPlanUrl: null,
};
---

<BaseLayout title={property.title} description={`${property.bedrooms} bed property - £${property.price.toLocaleString()}`}>
  <div class="min-h-screen bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white border-b">
      <div class="container mx-auto px-4 py-4">
        <div class="flex gap-6">
          <a href="/" class="text-gray-600 hover:text-blue-600 transition">Home</a>
          <a href="/about" class="text-gray-600 hover:text-blue-600 transition">About</a>
          <a href="/services" class="text-gray-600 hover:text-blue-600 transition">Services</a>
          <a href="/properties" class="text-blue-600 font-semibold">Properties</a>
          <a href="/blog" class="text-gray-600 hover:text-blue-600 transition">Blog</a>
          <a href="/contact" class="text-gray-600 hover:text-blue-600 transition">Contact</a>
        </div>
      </div>
    </nav>

    <!-- Property Details -->
    <article class="py-16">
      <div class="container mx-auto px-4">
        <!-- Back link -->
        <a href="/properties" class="inline-flex items-center text-blue-600 hover:text-blue-700 mb-8">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Properties
        </a>

        <div class="grid lg:grid-cols-3 gap-8">
          <!-- Main Content -->
          <div class="lg:col-span-2">
            <!-- Image Gallery Placeholder -->
            <div class="bg-gray-200 rounded-lg mb-8 overflow-hidden">
              {property.images.length > 0 ? (
                <div class="grid grid-cols-2 gap-2">
                  {property.images.slice(0, 4).map((image: string, index: number) => (
                    <img
                      src={image}
                      alt={`${property.title} - Image ${index + 1}`}
                      class={index === 0 ? "col-span-2 w-full h-96 object-cover" : "w-full h-48 object-cover"}
                    />
                  ))}
                </div>
              ) : (
                <div class="h-96 flex items-center justify-center">
                  <div class="text-center text-gray-500">
                    <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <p class="text-lg font-medium">Image Gallery</p>
                    <p class="text-sm">Photos will be displayed here</p>
                  </div>
                </div>
              )}
            </div>

            <!-- Property Overview -->
            <div class="bg-white rounded-lg shadow-sm p-8 mb-8">
              <h1 class="text-3xl font-bold mb-2">{property.title}</h1>
              <p class="text-gray-600 mb-4">{property.address}</p>

              <div class="flex items-center gap-6 mb-6">
                <div class="text-3xl font-bold text-blue-600">
                  £{property.price.toLocaleString()}
                </div>
                <div class="bg-blue-50 text-blue-700 px-4 py-2 rounded-lg font-semibold">
                  {property.listingType}
                </div>
              </div>

              <!-- Key Stats -->
              <div class="grid grid-cols-3 gap-4 mb-8 pb-8 border-b">
                <div class="text-center">
                  <svg class="w-8 h-8 mx-auto mb-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                  </svg>
                  <p class="text-2xl font-bold">{property.bedrooms}</p>
                  <p class="text-sm text-gray-600">Bedrooms</p>
                </div>
                <div class="text-center">
                  <svg class="w-8 h-8 mx-auto mb-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"></path>
                  </svg>
                  <p class="text-2xl font-bold">{property.bathrooms}</p>
                  <p class="text-sm text-gray-600">Bathrooms</p>
                </div>
                <div class="text-center">
                  <svg class="w-8 h-8 mx-auto mb-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"></path>
                  </svg>
                  <p class="text-2xl font-bold">{property.squareFootage}</p>
                  <p class="text-sm text-gray-600">sq ft</p>
                </div>
              </div>

              <!-- Description -->
              <div>
                <h2 class="text-2xl font-bold mb-4">Property Description</h2>
                <div class="prose max-w-none">
                  <Fragment set:html={property.description} />
                </div>
              </div>
            </div>

            <!-- Key Features -->
            {property.features.length > 0 && (
              <div class="bg-white rounded-lg shadow-sm p-8 mb-8">
                <h2 class="text-2xl font-bold mb-4">Key Features</h2>
                <div class="grid md:grid-cols-2 gap-3">
                  {property.features.map((feature: string) => (
                    <div class="flex items-start">
                      <svg class="w-5 h-5 mr-2 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      <span>{feature}</span>
                    </div>
                  ))}
                </div>
              </div>
            )}

            <!-- Floor Plan -->
            <div class="bg-white rounded-lg shadow-sm p-8">
              <h2 class="text-2xl font-bold mb-4">Floor Plan</h2>
              {property.floorPlanUrl ? (
                <img
                  src={property.floorPlanUrl}
                  alt="Floor Plan"
                  class="w-full rounded-lg"
                />
              ) : (
                <div class="bg-gray-100 rounded-lg h-96 flex items-center justify-center">
                  <div class="text-center text-gray-500">
                    <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                    <p class="text-lg font-medium">Floor Plan</p>
                    <p class="text-sm">Available on request</p>
                  </div>
                </div>
              )}
            </div>
          </div>

          <!-- Sidebar -->
          <div class="lg:col-span-1">
            <!-- Contact CTA -->
            <div class="bg-blue-600 text-white rounded-lg shadow-lg p-8 sticky top-4">
              <h3 class="text-2xl font-bold mb-4">Interested in this property?</h3>
              <p class="mb-6">Get in touch to arrange a viewing or request more information</p>

              <a
                href="/contact"
                class="block w-full bg-white text-blue-600 text-center px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition mb-4"
              >
                Request Viewing
              </a>

              <a
                href="/contact"
                class="block w-full border-2 border-white text-white text-center px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition"
              >
                Contact Agent
              </a>

              <div class="mt-6 pt-6 border-t border-blue-500">
                <div class="space-y-3 text-sm">
                  <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    <span>Call for details</span>
                  </div>
                  <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    <span>Email enquiry</span>
                  </div>
                  <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <span>Schedule viewing</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Share Property -->
            <div class="bg-white rounded-lg shadow-sm p-6 mt-6">
              <h4 class="font-semibold mb-3">Share this property</h4>
              <div class="flex gap-2">
                <a
                  href={`https://twitter.com/intent/tweet?url=${Astro.url}&text=${property.title}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 p-2 rounded text-center transition"
                >
                  Twitter
                </a>
                <a
                  href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 p-2 rounded text-center transition"
                >
                  Facebook
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>
  </div>
</BaseLayout>
