---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getSiteData, getProperties, placeholderData } from '../../lib/data';
import type { Property } from '../../lib/types';
import ViewingRequestModal from '../../components/ViewingRequestModal';

// Server-side rendering - fetch data on each request
const { slug } = Astro.params;
const siteData = await getSiteData() || placeholderData;

// Fetch properties and find the one matching the slug
const properties = await getProperties();
const property: Property | undefined = properties.find(p => p.slug === slug || p.apex27Id === slug);

// 404 if property not found
if (!property) {
  return Astro.redirect('/properties');
}

// Format price display
const priceDisplay = property.transactionType === 'rent'
  ? `£${property.price.toLocaleString()} pcm`
  : `£${property.price.toLocaleString()}`;

const listingType = property.transactionType === 'rent' ? 'To Let' : 'For Sale';

// Build property address for the form
const propertyAddress = [
  property.address,
  property.postcode
].filter(Boolean).join(', ');

// API URL - use environment variable or localhost in dev
const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:3000';
---

<BaseLayout
  title={property.title}
  description={`${property.bedrooms} bed property - ${priceDisplay}`}
  siteData={siteData}
  currentPath="/properties"
>
  <div class="min-h-screen bg-gray-50">
    <!-- Property Details -->
    <article class="py-16">
      <div class="container mx-auto px-4">
        <!-- Back link -->
        <a href="/properties" class="inline-flex items-center text-blue-600 hover:text-blue-700 mb-8">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Properties
        </a>

        <div class="grid lg:grid-cols-3 gap-8">
          <!-- Main Content -->
          <div class="lg:col-span-2">
            <!-- Image Gallery -->
            <div class="bg-gray-200 rounded-lg mb-8 overflow-hidden">
              {property.images && property.images.length > 0 ? (
                <div class="grid grid-cols-2 gap-2">
                  {property.images.slice(0, 5).map((image, index) => (
                    <img
                      src={image}
                      alt={`${property.title} - Image ${index + 1}`}
                      class={index === 0 ? "col-span-2 w-full h-96 object-cover" : "w-full h-48 object-cover"}
                    />
                  ))}
                </div>
              ) : (
                <div class="h-96 flex items-center justify-center">
                  <div class="text-center text-gray-500">
                    <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <p class="text-lg font-medium">Image Gallery</p>
                    <p class="text-sm">Photos coming soon</p>
                  </div>
                </div>
              )}
            </div>

            <!-- Property Overview -->
            <div class="bg-white rounded-lg shadow-sm p-8 mb-8">
              <h1 class="text-3xl font-bold mb-2">{property.title}</h1>
              {property.address && (
                <p class="text-gray-600 mb-4">{property.address}{property.postcode ? `, ${property.postcode}` : ''}</p>
              )}

              <div class="flex items-center gap-6 mb-6">
                <div class="text-3xl font-bold text-blue-600">
                  {priceDisplay}
                </div>
                <div class="bg-blue-50 text-blue-700 px-4 py-2 rounded-lg font-semibold">
                  {listingType}
                </div>
              </div>

              <!-- Key Stats -->
              <div class="grid grid-cols-3 gap-4 mb-8 pb-8 border-b">
                <div class="text-center">
                  <svg class="w-8 h-8 mx-auto mb-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                  </svg>
                  <p class="text-2xl font-bold">{property.bedrooms}</p>
                  <p class="text-sm text-gray-600">Bedrooms</p>
                </div>
                <div class="text-center">
                  <svg class="w-8 h-8 mx-auto mb-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"></path>
                  </svg>
                  <p class="text-2xl font-bold">{property.bathrooms}</p>
                  <p class="text-sm text-gray-600">Bathrooms</p>
                </div>
                <div class="text-center">
                  <svg class="w-8 h-8 mx-auto mb-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                  </svg>
                  <p class="text-2xl font-bold">{property.propertyType || 'Property'}</p>
                  <p class="text-sm text-gray-600">Type</p>
                </div>
              </div>

              <!-- Description -->
              {property.description && (
                <div>
                  <h2 class="text-2xl font-bold mb-4">Property Description</h2>
                  <div class="prose max-w-none text-gray-700 whitespace-pre-line">
                    {property.description}
                  </div>
                </div>
              )}
            </div>

            <!-- Floor Plans -->
            {property.floorplans && property.floorplans.length > 0 && (
              <div class="bg-white rounded-lg shadow-sm p-8 mb-8">
                <h2 class="text-2xl font-bold mb-4">Floor Plans</h2>
                <div class="space-y-4">
                  {property.floorplans.map((floorplan, index) => (
                    <img
                      src={floorplan}
                      alt={`Floor Plan ${index + 1}`}
                      class="w-full rounded-lg"
                    />
                  ))}
                </div>
              </div>
            )}

            <!-- EPC -->
            {property.epcUrl && (
              <div class="bg-white rounded-lg shadow-sm p-8">
                <h2 class="text-2xl font-bold mb-4">Energy Performance Certificate</h2>
                <img
                  src={property.epcUrl}
                  alt="EPC Certificate"
                  class="w-full rounded-lg"
                />
              </div>
            )}
          </div>

          <!-- Sidebar -->
          <div class="lg:col-span-1">
            <!-- Contact CTA -->
            <div class="bg-blue-600 text-white rounded-lg shadow-lg p-8 sticky top-4">
              <h3 class="text-2xl font-bold mb-4">Interested in this property?</h3>
              <p class="mb-6">Get in touch with {siteData.agent.name} to arrange a viewing or request more information</p>

              <div class="mb-4">
                <ViewingRequestModal
                  client:load
                  agentId={siteData.agent.id}
                  propertyId={property.id}
                  apex27ListingId={property.apex27Id}
                  propertyAddress={propertyAddress}
                  apiUrl={API_URL}
                  triggerClassName="w-full bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition flex items-center justify-center gap-2"
                />
              </div>

              <a
                href="/contact"
                class="block w-full border-2 border-white text-white text-center px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition"
              >
                Contact Agent
              </a>

              {siteData.agent.phone && (
                <div class="mt-6 pt-6 border-t border-blue-500">
                  <a href={`tel:${siteData.agent.phone}`} class="flex items-center text-white hover:text-blue-100 transition">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    {siteData.agent.phone}
                  </a>
                </div>
              )}
            </div>

            <!-- Share Property -->
            <div class="bg-white rounded-lg shadow-sm p-6 mt-6">
              <h4 class="font-semibold mb-3">Share this property</h4>
              <div class="flex gap-2">
                <a
                  href={`https://twitter.com/intent/tweet?url=${Astro.url}&text=${encodeURIComponent(property.title)}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 p-2 rounded text-center transition"
                >
                  Twitter
                </a>
                <a
                  href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 p-2 rounded text-center transition"
                >
                  Facebook
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>
  </div>

  <!-- GA4: Track property view -->
  <script is:inline define:vars={{
    propertyId: property.id,
    propertyTitle: property.title,
    propertyPrice: property.price,
    propertyBedrooms: property.bedrooms,
    propertyType: property.propertyType,
    transactionType: property.transactionType
  }}>
    if (typeof window !== 'undefined' && window.gtag) {
      window.gtag('event', 'view_property', {
        property_id: propertyId,
        property_title: propertyTitle,
        value: propertyPrice,
        currency: 'GBP',
        bedrooms: propertyBedrooms,
        property_type: propertyType || 'unknown',
        status: transactionType === 'rent' ? 'for_rent' : 'for_sale'
      });
    }
  </script>
</BaseLayout>
