---
/**
 * About Page
 * T062: Updated to use real agent data
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import { getSiteData, placeholderData } from '../lib/data';

const siteData = await getSiteData() || placeholderData;
const agent = siteData.agent;
---

<BaseLayout
  title={`About ${agent.name}`}
  description={agent.bio || `Learn more about ${agent.name}, your local property expert`}
  siteData={siteData}
>
  <!-- Page Header -->
  <section class="bg-blue-600 text-white py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">About Me</h1>
      <p class="text-xl text-blue-100">Get to know your local property expert</p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Profile Image / Avatar -->
        <div class="lg:col-span-1">
          <div class="sticky top-24">
            {agent.avatarUrl ? (
              <img
                src={agent.avatarUrl}
                alt={agent.name}
                class="w-full rounded-2xl shadow-xl"
              />
            ) : (
              <div class="w-full aspect-square bg-gradient-to-br from-blue-500 to-blue-700 rounded-2xl shadow-xl flex items-center justify-center">
                <span class="text-8xl text-white font-bold">
                  {agent.name.split(' ').map(n => n[0]).join('')}
                </span>
              </div>
            )}

            <!-- Quick Contact Card -->
            <div class="mt-6 bg-white rounded-xl shadow-sm p-6">
              <h3 class="font-semibold text-gray-900 mb-4">Get in Touch</h3>
              {agent.phone && (
                <a
                  href={`tel:${agent.phone}`}
                  class="flex items-center gap-3 text-gray-600 hover:text-blue-600 transition mb-3"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  {agent.phone}
                </a>
              )}
              {agent.email && (
                <a
                  href={`mailto:${agent.email}`}
                  class="flex items-center gap-3 text-gray-600 hover:text-blue-600 transition"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  {agent.email}
                </a>
              )}
            </div>
          </div>
        </div>

        <!-- Biography & Details -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Name & Title -->
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-2">{agent.name}</h2>
            <p class="text-lg text-blue-600 font-medium">Estate Agent</p>
          </div>

          <!-- Biography -->
          <div class="bg-white rounded-xl shadow-sm p-8">
            <h3 class="text-xl font-semibold mb-4">Biography</h3>
            {agent.bio ? (
              <p class="text-gray-700 leading-relaxed text-lg">{agent.bio}</p>
            ) : (
              <p class="text-gray-700 leading-relaxed text-lg">
                I'm a dedicated estate agent committed to providing exceptional service to my clients.
                With extensive knowledge of the local property market, I help buyers find their dream
                homes and sellers achieve the best possible price for their properties.
              </p>
            )}
          </div>

          <!-- Qualifications -->
          {agent.qualifications && agent.qualifications.length > 0 && (
            <div class="bg-white rounded-xl shadow-sm p-8">
              <h3 class="text-xl font-semibold mb-4">Professional Qualifications</h3>
              <div class="grid sm:grid-cols-2 gap-4">
                {agent.qualifications.map((qual: string) => (
                  <div class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg">
                    <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                      <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    </div>
                    <span class="font-medium text-gray-900">{qual}</span>
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- Why Choose Me -->
          <div class="bg-white rounded-xl shadow-sm p-8">
            <h3 class="text-xl font-semibold mb-6">Why Work With Me?</h3>
            <div class="grid sm:grid-cols-2 gap-6">
              <div class="flex gap-4">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-1">Trusted Professional</h4>
                  <p class="text-gray-600 text-sm">Fully qualified and regulated estate agent</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-1">Local Expert</h4>
                  <p class="text-gray-600 text-sm">In-depth knowledge of the local area</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-1">Responsive</h4>
                  <p class="text-gray-600 text-sm">Quick response times and regular updates</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-1">Personal Service</h4>
                  <p class="text-gray-600 text-sm">Dedicated attention throughout your journey</p>
                </div>
              </div>
            </div>
          </div>

          <!-- CTA -->
          <div class="bg-blue-50 rounded-xl p-8 text-center">
            <h3 class="text-2xl font-bold mb-4">Ready to Get Started?</h3>
            <p class="text-gray-700 mb-6">
              Whether you're buying, selling, or letting, I'm here to help.
            </p>
            <a
              href="/contact"
              class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition"
            >
              Contact Me Today
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
