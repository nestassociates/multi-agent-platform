---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getSiteData, getContentBySlug, placeholderData } from '../../lib/data';

// Server-side rendering - fetch data on each request
const { slug } = Astro.params;
const siteData = await getSiteData() || placeholderData;
const blogPost = getContentBySlug(siteData, slug as string);

// 404 if post not found
if (!blogPost) {
  return Astro.redirect('/blog');
}
---

<BaseLayout title={blogPost.title} description={blogPost.excerpt || undefined} siteData={siteData} currentPath="/blog">
  <div class="min-h-screen bg-gray-50">
    <!-- Article -->
    <article class="py-16">
      <div class="container mx-auto px-4 max-w-3xl">
        <!-- Back link -->
        <a href="/blog" class="inline-flex items-center text-blue-600 hover:text-blue-700 mb-8">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Blog
        </a>

        <!-- Featured Image -->
        {blogPost.featuredImageUrl && (
          <img
            src={blogPost.featuredImageUrl}
            alt={blogPost.title}
            class="w-full h-96 object-cover rounded-lg mb-8"
          />
        )}

        <!-- Title & Meta -->
        <div class="mb-8">
          <h1 class="text-4xl font-bold mb-4">{blogPost.title}</h1>
          <div class="flex items-center text-gray-600 text-sm">
            <time datetime={blogPost.publishedAt}>
              {new Date(blogPost.publishedAt).toLocaleDateString('en-GB', {
                day: 'numeric',
                month: 'long',
                year: 'numeric'
              })}
            </time>
            <span class="mx-2">â€¢</span>
            <span>By {siteData.agent.name}</span>
          </div>
        </div>

        <!-- Content -->
        <div class="prose prose-lg max-w-none bg-white rounded-lg shadow-sm p-8">
          <Fragment set:html={blogPost.contentBody} />
        </div>

        <!-- Social Share -->
        <div class="mt-12 pt-8 border-t">
          <p class="text-gray-600 mb-4">Share this post:</p>
          <div class="flex gap-4">
            <a
              href={`https://twitter.com/intent/tweet?url=${Astro.url}&text=${encodeURIComponent(blogPost.title)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-600 hover:text-blue-600 transition"
            >
              Twitter
            </a>
            <a
              href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-600 hover:text-blue-600 transition"
            >
              Facebook
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${Astro.url}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-600 hover:text-blue-600 transition"
            >
              LinkedIn
            </a>
          </div>
        </div>

        <!-- CTA -->
        <div class="mt-12 bg-blue-50 rounded-lg p-8 text-center">
          <h2 class="text-2xl font-bold mb-4">Need Help with Your Property Search?</h2>
          <p class="text-gray-700 mb-6">Get in touch with {siteData.agent.name} for expert advice</p>
          <a href="/contact" class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
            Contact Me
          </a>
        </div>
      </div>
    </article>
  </div>
</BaseLayout>
