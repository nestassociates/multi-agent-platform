---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getSiteData, getContentByType, placeholderData } from '../../lib/data';

// Load site data
const siteData = await getSiteData() || placeholderData;
const blogPosts = getContentByType(siteData, 'blog_post');
---

<BaseLayout title="Blog & Market Insights" siteData={siteData} currentPath="/blog">
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <section class="bg-white border-b py-12">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold mb-4">Blog & Market Insights</h1>
        <p class="text-gray-600 text-lg">
          Expert advice, market updates, and property guides from {siteData.agent.name}
        </p>
      </div>
    </section>

    <!-- Blog Posts -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        {blogPosts.length === 0 ? (
          <div class="bg-white rounded-lg shadow-sm p-12 text-center">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
            <h2 class="text-2xl font-semibold mb-2">No Blog Posts Yet</h2>
            <p class="text-gray-600">Check back soon for market insights and property advice</p>
          </div>
        ) : (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {blogPosts.map((post) => (
              <article class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition">
                {post.featuredImageUrl && (
                  <img
                    src={post.featuredImageUrl}
                    alt={post.title}
                    class="w-full h-48 object-cover"
                  />
                )}
                <div class="p-6">
                  <div class="text-sm text-gray-500 mb-2">
                    {new Date(post.publishedAt).toLocaleDateString('en-GB', {
                      day: 'numeric',
                      month: 'long',
                      year: 'numeric'
                    })}
                  </div>
                  <h2 class="text-xl font-bold mb-3">
                    <a href={`/blog/${post.slug}`} class="hover:text-blue-600 transition">
                      {post.title}
                    </a>
                  </h2>
                  {post.excerpt && (
                    <p class="text-gray-600 mb-4 line-clamp-3">{post.excerpt}</p>
                  )}
                  <a
                    href={`/blog/${post.slug}`}
                    class="text-blue-600 hover:text-blue-700 font-medium"
                  >
                    Read more â†’
                  </a>
                </div>
              </article>
            ))}
          </div>
        )}
      </div>
    </section>
  </div>
</BaseLayout>
