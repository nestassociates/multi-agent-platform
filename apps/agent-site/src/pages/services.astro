---
/**
 * Services Page
 * T063: Updated to use real agent data
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import { getSiteData, placeholderData } from '../lib/data';

const siteData = await getSiteData() || placeholderData;
const agent = siteData.agent;

const services = [
  {
    title: 'Residential Sales',
    description: 'Expert guidance through the selling process, from valuation to completion.',
    icon: 'home-sale',
  },
  {
    title: 'Property Lettings',
    description: 'Comprehensive letting services for landlords and tenants.',
    icon: 'key',
  },
  {
    title: 'Property Valuations',
    description: 'Accurate, market-leading valuations backed by local expertise.',
    icon: 'chart',
  },
  {
    title: 'Property Management',
    description: 'Full property management services for peace of mind.',
    icon: 'cog',
  },
];
---

<BaseLayout
  title={`Services - ${agent.name}`}
  description="Professional estate agency services including sales, lettings, valuations, and property management"
  siteData={siteData}
>
  <!-- Page Header -->
  <section class="bg-blue-600 text-white py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">My Services</h1>
      <p class="text-xl text-blue-100">Comprehensive property services tailored to your needs</p>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-8 mb-16">
        {services.map((service) => (
          <div class="bg-white rounded-xl shadow-sm p-8 hover:shadow-md transition">
            <div class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center mb-6">
              {service.icon === 'home-sale' && (
                <svg class="w-7 h-7 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
              )}
              {service.icon === 'key' && (
                <svg class="w-7 h-7 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                </svg>
              )}
              {service.icon === 'chart' && (
                <svg class="w-7 h-7 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              )}
              {service.icon === 'cog' && (
                <svg class="w-7 h-7 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              )}
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">{service.title}</h3>
            <p class="text-gray-600 leading-relaxed">{service.description}</p>
          </div>
        ))}
      </div>

      <!-- Process Section -->
      <div class="bg-white rounded-xl shadow-sm p-8 md:p-12 mb-16">
        <h2 class="text-3xl font-bold text-center mb-12">How I Work</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-600 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-6">
              1
            </div>
            <h3 class="text-xl font-semibold mb-3">Initial Consultation</h3>
            <p class="text-gray-600">
              We discuss your needs, budget, and timeline to create a tailored plan that works for you.
            </p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-600 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-6">
              2
            </div>
            <h3 class="text-xl font-semibold mb-3">Expert Guidance</h3>
            <p class="text-gray-600">
              I guide you through every step, whether buying, selling, or letting your property.
            </p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-600 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-6">
              3
            </div>
            <h3 class="text-xl font-semibold mb-3">Successful Completion</h3>
            <p class="text-gray-600">
              I handle negotiations and paperwork to ensure a smooth, successful transaction.
            </p>
          </div>
        </div>
      </div>

      <!-- For Sellers -->
      <div class="grid lg:grid-cols-2 gap-8 mb-16">
        <div class="bg-gradient-to-br from-blue-600 to-blue-800 rounded-xl p-8 text-white">
          <h3 class="text-2xl font-bold mb-4">For Sellers</h3>
          <ul class="space-y-3 mb-6">
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Free, no-obligation market appraisal</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Professional photography and marketing</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Rightmove, Zoopla & OnTheMarket listings</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Accompanied viewings</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Expert negotiation to achieve best price</span>
            </li>
          </ul>
          <a href="/contact" class="inline-block bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition">
            Book a Valuation
          </a>
        </div>

        <div class="bg-gradient-to-br from-gray-700 to-gray-900 rounded-xl p-8 text-white">
          <h3 class="text-2xl font-bold mb-4">For Landlords</h3>
          <ul class="space-y-3 mb-6">
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Free rental valuation</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Comprehensive tenant referencing</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Let only or full management options</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Rent collection and arrears management</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Property maintenance coordination</span>
            </li>
          </ul>
          <a href="/contact" class="inline-block bg-white text-gray-900 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition">
            Discuss Letting
          </a>
        </div>
      </div>

      <!-- Fees Link -->
      {siteData.sections.fees && (
        <div class="bg-blue-50 rounded-xl p-8 text-center">
          <h3 class="text-2xl font-bold mb-4">Transparent Pricing</h3>
          <p class="text-gray-700 mb-6 max-w-2xl mx-auto">
            I believe in transparent, competitive pricing with no hidden fees.
            View my full fee structure for complete details.
          </p>
          <a
            href="/fees"
            class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition"
          >
            View My Fees
          </a>
        </div>
      )}

      <!-- CTA -->
      {!siteData.sections.fees && (
        <div class="bg-blue-50 rounded-xl p-8 text-center">
          <h3 class="text-2xl font-bold mb-4">Ready to Get Started?</h3>
          <p class="text-gray-700 mb-6">Let's discuss your property needs today</p>
          <a
            href="/contact"
            class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition"
          >
            Contact Me
          </a>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
