---
/**
 * Global Header Component
 * T057: Site header with navigation
 */
import Navigation from './Navigation.astro';
import type { NavItem } from '../lib/types';

interface Props {
  agentName: string;
  navigation: NavItem[];
  phone?: string | null;
  email?: string;
  currentPath?: string;
}

const { agentName, navigation, phone, email, currentPath } = Astro.props;
---

<header class="bg-white shadow-sm sticky top-0 z-40">
  <!-- Top Bar (optional contact info) -->
  {(phone || email) && (
    <div class="hidden md:block bg-gray-50 border-b text-sm">
      <div class="container mx-auto px-4 py-2 flex justify-end gap-6">
        {phone && (
          <a href={`tel:${phone}`} class="text-gray-600 hover:text-blue-600 transition flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {phone}
          </a>
        )}
        {email && (
          <a href={`mailto:${email}`} class="text-gray-600 hover:text-blue-600 transition flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            {email}
          </a>
        )}
      </div>
    </div>
  )}

  <!-- Main Navigation -->
  <div class="container mx-auto px-4 py-4">
    <Navigation items={navigation} agentName={agentName} currentPath={currentPath} />
  </div>
</header>
