---
interface Props {
  property: {
    slug: string;
    title: string;
    price: number;
    bedrooms: number;
    bathrooms: number;
    address?: string;
    images?: string[];
    featuredImageUrl?: string;
    listingType?: string;
  };
}

const { property } = Astro.props;
const imageUrl = property.featuredImageUrl || property.images?.[0] || '/placeholder-property.jpg';
---

<article class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition group">
  <a href={`/properties/${property.slug}`} class="block">
    <!-- Property Image -->
    <div class="relative h-48 overflow-hidden">
      <img
        src={imageUrl}
        alt={property.title}
        class="w-full h-full object-cover group-hover:scale-105 transition duration-300"
      />
      {property.listingType && (
        <div class="absolute top-4 right-4 bg-blue-600 text-white px-3 py-1 rounded-lg text-sm font-semibold">
          {property.listingType}
        </div>
      )}
    </div>

    <!-- Property Details -->
    <div class="p-6">
      <!-- Price -->
      <div class="text-2xl font-bold text-blue-600 mb-2">
        Â£{property.price.toLocaleString()}
      </div>

      <!-- Title/Address -->
      <h3 class="text-lg font-semibold mb-2 group-hover:text-blue-600 transition line-clamp-2">
        {property.title}
      </h3>

      {property.address && (
        <p class="text-gray-600 text-sm mb-4 line-clamp-1">
          {property.address}
        </p>
      )}

      <!-- Beds & Baths -->
      <div class="flex gap-4 text-sm text-gray-700">
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          <span>{property.bedrooms} bed{property.bedrooms !== 1 ? 's' : ''}</span>
        </div>
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"></path>
          </svg>
          <span>{property.bathrooms} bath{property.bathrooms !== 1 ? 's' : ''}</span>
        </div>
      </div>
    </div>
  </a>
</article>
